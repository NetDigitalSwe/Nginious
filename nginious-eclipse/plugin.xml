<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="nginious_plugin.contentype"
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.wst.html.core.htmlsource"
            file-extensions="xsp"
            id="nginious_plugin.contenttype.xsp"
            name="XSP"
            priority="normal">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="com.nginious.http.plugin.category.wizards"
            name="Nginious">
      </category>
      <wizard
            category="com.nginious.http.plugin.category.wizards"
            class="com.nginious.http.plugin.NewProjectWizard"
            icon="src/main/resources/icons/nginious.gif"
            id="nginious_plugin.wizard.new.project"
            name="Nginious project">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="com.nginious.http.plugin.category.wizards"
            class="com.nginious.http.plugin.NewXspFileWizard"
            icon="src/main/resources/icons/nginious.gif"
            id="nginious_plugin.wizard.file.xsp"
            name="XSP file">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="com.nginious.http.plugin.Startup">
      </startup>
   </extension>
   <extension
         id="com.nginious.http.plugin.NginiousNature"
         name="NginiousNature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="com.nginious.http.plugin.NginiousNature">
         </run>
      </runtime>
   </extension>
   <extension
         id="com.nginious.http.plugin.ProjectXProperties"
         name="Properties"
         point="org.eclipse.ui.propertyPages">
      <page
            class="com.nginious.http.plugin.ProjectPropertyPage"
            icon="src/main/resources/icons/nginious.gif"
            id="com.nginious.http.plugin.properties"
            name="Nginious properties">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="nginious plugin"
            name="Nginious">
      </category>
      <view
            category="nginious_plugin"
            class="com.nginious.http.plugin.AccessLogView"
            icon="src/main/resources/icons/nginious.gif"
            id="com.nginious.http.plugin.AccessLogView"
            name="Access log"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="nginious_plugin"
            name="Nginious">
      </category>
      <view
            category="nginious_plugin"
            class="com.nginious.http.plugin.MessageLogView"
            icon="src/main/resources/icons/nginious.gif"
            id="com.nginious.http.plugin.MessageLogView"
            name="Server log">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="com.nginious.http.plugin.AccessLogView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.TaskList">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="com.nginious.http.plugin.publishCategory"
            name="Publish Category">
      </category>
      <command
            categoryId="com.nginious.http.plugin.publishCategory"
            id="com.nginious.http.plugin.publishCommand"
            name="Publish">
      </command>
      <category
            id="com.nginious.http.plugin.rollbackCategory"
            name="Rollback">
      </category>
      <command
            categoryId="com.nginious.http.plugin.rollbackCategory"
            id="com.nginious.http.plugin.rollbackCommand"
            name="Rollback">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.nginious.http.plugin.PublishHandler"
            commandId="com.nginious.http.plugin.publishCommand">
         <activeWhen>
            <with
                  variable="com.nginious.http.plugin.publishState">
               <equals
                     value="ACTIVE">
               </equals>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="com.nginious.http.plugin.RollbackHandler"
            commandId="com.nginious.http.plugin.rollbackCommand">
         <activeWhen>
            <with
                  variable="com.nginious.http.plugin.rollbackState">
               <equals
                     value="ACTIVE">
               </equals>
            </with>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:project?after=buildAutomatically">
         <separator
               name="com.nginious.http.plugin.menuSeparator1"
               visible="true">
         </separator>
         <menu
               icon="src/main/resources/icons/nginious.gif"
               id="com.nginious.http.plugin.nginiousSubMenu"
               label="Nginious">
            <command
                  commandId="com.nginious.http.plugin.publishCommand"
                  id="com.nginious.http.plugin.publishMenu"
                  mnemonic="S">
            </command>
            <command
                  commandId="com.nginious.http.plugin.rollbackCommand"
                  id="com.nginious.http.plugin.rollbackMenu"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <separator
               name="com.nginious.http.plugin.popupSeparatorBefore"
               visible="true">
         </separator>
         <menu
               icon="src/main/resources/icons/nginious.gif"
               id="com.nginious.http.plugin.nginiousSubMenu"
               label="Nginious">
            <command
                  commandId="com.nginious.http.plugin.publishCommand"
                  id="com.nginious.http.plugin.publishMenu"
                  mnemonic="S">
            </command>
            <command
                  commandId="com.nginious.http.plugin.rollbackCommand"
                  id="com.nginious.http.plugin.rollbackMenu"
                  mnemonic="S">
            </command>
         </menu>
         <separator
               name="com.nginious.http.plugin.popupSeparatorAfter"
               visible="true">
         </separator>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="com.nginious.http.plugin.RollbackState">
         <variable
               name="com.nginious.http.plugin.rollbackState"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
      <sourceProvider
            provider="com.nginious.http.plugin.PublishState">
         <variable
               name="com.nginious.http.plugin.publishState"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>

</plugin>
